<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2A2C2E"
    tools:context=".Statistic">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tittle"
            style="@style/TittleTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/tittleStatistic"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tittleTimeOfExercises"
            style="@style/TittleTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="@string/tittleTimeOfExercises"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tittle" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/timeOfExercises"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:paddingHorizontal="10dp"
            android:layout_marginStart="20dp"
            style="@style/TittleTextStyle"
            tools:text="30"
            android:textColor="@android:color/holo_orange_dark"
            android:textStyle="bold"
            android:textSize="20sp"
            android:background="@drawable/round_style"
            app:layout_constraintBottom_toBottomOf="@+id/tittleTimeOfExercises"
            app:layout_constraintStart_toEndOf="@+id/tittleTimeOfExercises"
            app:layout_constraintTop_toTopOf="@+id/tittleTimeOfExercises" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tittleNumOfExercises"
            style="@style/TittleTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:text="@string/tittleNumOfExercisesStat"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/timeOfExercises" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/numOfExercisesWindowStat"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            style="@style/TittleTextStyle"
            tools:text="30"
            android:textSize="24sp"
            android:paddingHorizontal="10dp"
            android:textColor="@android:color/holo_orange_dark"
            android:textStyle="bold"
            android:background="@drawable/round_style"
            app:layout_constraintBottom_toBottomOf="@+id/tittleNumOfExercises"
            app:layout_constraintStart_toEndOf="@+id/tittleNumOfExercises"
            app:layout_constraintTop_toTopOf="@+id/tittleNumOfExercises" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tittleTrueExercisesStat"
            style="@style/TittleTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="@string/tittleTrueWindow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/numOfExercisesWindowStat" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/windowTrueExercises"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            style="@style/TittleTextStyle"
            tools:text="30"
            android:textSize="24sp"
            android:paddingHorizontal="10dp"
            android:textColor="@android:color/holo_orange_dark"
            android:textStyle="bold"
            android:background="@drawable/round_style"
            app:layout_constraintBottom_toBottomOf="@+id/tittleTrueExercisesStat"
            app:layout_constraintStart_toEndOf="@+id/tittleTrueExercisesStat"
            app:layout_constraintTop_toTopOf="@+id/tittleTrueExercisesStat" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tittleFalseExercisesStat"
            style="@style/TittleTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:text="@string/tittleFalseWindow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/windowTrueExercises" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/windowFalseExercises"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            style="@style/TittleTextStyle"
            tools:text="30"
            android:textSize="24sp"
            android:paddingHorizontal="10dp"
            android:textColor="@android:color/holo_orange_dark"
            android:textStyle="bold"
            android:background="@drawable/round_style"
            app:layout_constraintBottom_toBottomOf="@+id/tittleFalseExercisesStat"
            app:layout_constraintStart_toEndOf="@+id/tittleFalseExercisesStat"
            app:layout_constraintTop_toTopOf="@+id/tittleFalseExercisesStat" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tittleGrade"
            style="@style/TittleTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/grade"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/windowFalseExercises" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/grade"
            style="@style/TittleTextStyle"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/round_style"
            android:textSize="60sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tittleGrade"
            tools:text="5" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textView"
            style="@style/TittleTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/my_font"
            android:gravity="start"
            android:textColor="#FABE88"
            android:textSize="30sp"
            android:paddingStart="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/grade"
            tools:text="В конце концов имеет значение только то, чему ты научился и что по-настоящему усвоил." />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAgain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:background="@drawable/round_style_green"
            android:paddingHorizontal="2dp"
            android:text="@string/btnAgain"
            android:textColor="#852B2B"
            app:layout_constraintBottom_toBottomOf="@+id/grade"
            app:layout_constraintEnd_toStartOf="@+id/grade"
            app:layout_constraintTop_toTopOf="@+id/grade" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:background="@drawable/round_style_red"
            android:paddingHorizontal="10dp"
            android:text="@string/btnClose"
            android:textColor="@android:color/holo_green_light"
            app:layout_constraintBottom_toBottomOf="@+id/grade"
            app:layout_constraintStart_toEndOf="@+id/grade"
            app:layout_constraintTop_toTopOf="@+id/grade" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>